header.page-navigation.content-grid
  .navbar
    +burger-menu(menuHierarchy)(class='navbar__burger-menu')
    nav.navbar__site
      .navbar__logo-wrapper
        +logo()
      +navigation-menu(menuHierarchy)(class='navbar__navigation-menu')
    .navbar__user
      .navbar__search-field.navbar-search-box
        form.search-field.navbar-search-box__content(action="#")
          +inputField('', 'nav-search', 'text', pageHeaderContent.searchPlaceholder[lang])(class='navbar-search-box__search-field')
          +icon-button(pageHeaderContent.submitButtonText[lang], 'search')(class = 'navbar-search-box__submit-button', outlined, alternate, iconWidth = 24, iconHeight = 24)
        +icon-button(pageHeaderContent.closeButtonText[lang], 'cross')(outlined, alternate, class = 'navbar-search-box__content-close-button', iconWidth = 24, iconHeight = 24)
        button.button.icon-button.icon-button--outlined.navbar-search-box__toggler(type='button')
          span.visually-hidden= pageHeaderContent.searchTogglerButtonText[lang]
          +sprite('search')(width = 24, height = 24)
          +sprite('cross')(width = 24, height = 24)
      +icon-button(pageHeaderContent.cartButton.name[lang], 'cart')(outlined, href = pageHeaderContent.cartButton.href, alternate, iconWidth = 24, iconHeight = 24)