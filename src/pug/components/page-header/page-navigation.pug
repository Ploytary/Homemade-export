  const pageHeaderContent = {
    searchPlaceholder: {en: 'Search...', ru: 'Поиск...'},
    searchTogglerButtonText: {en: 'Search', ru: 'Поиск'},
    submitButtonText: {en: 'Submit', ru: 'Подтвердить'},
