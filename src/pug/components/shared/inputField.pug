mixin inputField(label, nameAtt, typeAtt='text', placeholder='', svg='')
  case typeAtt
    when 'checkbox'
      label.input-field&attributes(attributes)(data-type=typeAtt)
        input.input-field__input(
          type=typeAtt
          name=nameAtt
        )
        span.input-field__check-mark
          if svg === ''
            <svg width="25" height="25" fill="none"><path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m9.6 11 3 3 10-10"/><path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21.6 12v7a2 2 0 0 1-2 2h-14a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11"/></svg>
          else
            span.input-field__check-cell
              +sprite(svg)
        span.input-field__label= label
    when 'textarea'
      label.input-field&attributes(attributes)(data-type=typeAtt)
        span.input-field__label= label
        textarea.input-field__input(
          name=nameAtt
          placeholder=placeholder
        )= attributes.value     
    default 
      label.input-field&attributes(attributes)(data-type=typeAtt)
        span.input-field__label= label
        input.input-field__input(
          type=typeAtt
          name=nameAtt
          placeholder=placeholder
          autocomplete='off'
        )
        